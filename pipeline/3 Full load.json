{
	"name": "3 Full load",
	"properties": {
		"activities": [
			{
				"name": "Fetch Table list",
				"type": "Lookup",
				"dependsOn": [],
				"policy": {
					"timeout": "0.12:00:00",
					"retry": 0,
					"retryIntervalInSeconds": 30,
					"secureOutput": false,
					"secureInput": false
				},
				"userProperties": [],
				"typeProperties": {
					"source": {
						"type": "AzureSqlSource",
						"queryTimeout": "02:00:00",
						"partitionOption": "None"
					},
					"dataset": {
						"referenceName": "prj_ds_fetch_tablelist",
						"type": "DatasetReference"
					},
					"firstRowOnly": false
				}
			},
			{
				"name": "Filter Full load tables",
				"type": "Filter",
				"dependsOn": [
					{
						"activity": "Fetch Table list",
						"dependencyConditions": [
							"Succeeded"
						]
					}
				],
				"userProperties": [],
				"typeProperties": {
					"items": {
						"value": "@activity('Fetch Table list').output.value",
						"type": "Expression"
					},
					"condition": {
						"value": "@equals(toLower(item().LoadType),toLower('full'))",
						"type": "Expression"
					}
				}
			},
			{
				"name": "For each for each table",
				"type": "ForEach",
				"dependsOn": [
					{
						"activity": "Filter Full load tables",
						"dependencyConditions": [
							"Succeeded"
						]
					}
				],
				"userProperties": [],
				"typeProperties": {
					"items": {
						"value": "@activity('Fetch Table list').output.value",
						"type": "Expression"
					},
					"activities": [
						{
							"name": "Copy data from source to destination",
							"type": "Copy",
							"dependsOn": [],
							"policy": {
								"timeout": "0.12:00:00",
								"retry": 0,
								"retryIntervalInSeconds": 30,
								"secureOutput": false,
								"secureInput": false
							},
							"userProperties": [],
							"typeProperties": {
								"source": {
									"type": "SqlServerSource",
									"queryTimeout": "02:00:00",
									"partitionOption": "None"
								},
								"sink": {
									"type": "DelimitedTextSink",
									"storeSettings": {
										"type": "AzureBlobStorageWriteSettings"
									},
									"formatSettings": {
										"type": "DelimitedTextWriteSettings",
										"quoteAllText": true,
										"fileExtension": ".txt"
									}
								},
								"enableStaging": false,
								"translator": {
									"type": "TabularTranslator",
									"typeConversion": true,
									"typeConversionSettings": {
										"allowDataTruncation": true,
										"treatBooleanAsNumber": false
									}
								}
							},
							"inputs": [
								{
									"referenceName": "prj_ds_onprems_sqlserver",
									"type": "DatasetReference",
									"parameters": {
										"lp_schema": {
											"value": "@item().sourceSchema",
											"type": "Expression"
										},
										"lp_tablename": {
											"value": "@item().sourceTableName",
											"type": "Expression"
										}
									}
								}
							],
							"outputs": [
								{
									"referenceName": "prj_ds_bronzelayer",
									"type": "DatasetReference",
									"parameters": {
										"lp_destinationfilename": {
											"value": "@concat(item().sourceSchema,'_',item().sourceTableName,'.csv')",
											"type": "Expression"
										}
									}
								}
							]
						}
					]
				}
			}
		],
		"folder": {
			"name": "Shri-Adf-Dev-Project"
		},
		"annotations": []
	}
}